import java.awt.*;


public class FrameTest {

    public static void main(String args[]) {
        Frame f = new Frame();
        f.setSize(300, 400);
        f.setLocationRelativeTo(null);
        // Erzeugen eines Beobachter-Objekts und
        // Anmelden bei der Ereignisquelle
        f.addWindowListener(new FensterBeobachter());
        f.setVisible(true);
        }
}
